<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view_1"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view_2"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/v_1"
        app:layout_constraintLeft_toRightOf="@+id/v_1" />


    <TextView
        android:id="@+id/v_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view_3"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/v_1"
        app:layout_constraintTop_toBottomOf="@+id/v_1" />

    <TextView
        android:id="@+id/v_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view_4"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_1"
        app:layout_constraintLeft_toRightOf="@+id/v_2" />

    <ImageView
        android:id="@+id/v_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>